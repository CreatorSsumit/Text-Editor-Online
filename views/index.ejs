<!DOCTYPE html>
<html>

<head>

    <title>
        Text Editor
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

    <div id="screen">

        <!-- left side part -->

        <div id="leftside">
            <button id="file">  File  ></button>
            <form action="/data" method="post">

                <button id="files">  Save </button>

                <br><br>
                <input type="text" placeholder=" Enter filename" name="filename" id="fname">

                <div id="openbox">
                    <h5>/Upload/</h5>
                    <br>
                    <% filenames.forEach(function(err){%>

                        <h5 style="color: white;  margin-top: 8px; font-weight: 500;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">

                            <a style="color: rgb(172, 172, 172); text-decoration: none;" href=<%="/open/" +err %>> <%= err%></a>
                        </h5>
                        <a style="font-size: 15px; color: rgb(255, 133, 133); text-decoration: none; margin-right: 7px;" href=<%="/delete/" +err%>>Delete</a>
                        <a style="font-size: 15px; color: rgb(13, 184, 113); text-decoration: none;" href=<%="/download/" +err%>>Download</a>
                        <%})%>
                </div>
        </div>

        <!-- right side part -->

        <div id="rightside">
            <textarea name="textarea">
            
            </textarea>

        </div>

        </form>
    </div>




    <script>
        var data = document.querySelector('#file');
        data.addEventListener('click', function() {
            var t1 = new TimelineMax();

            t1.fromTo('#files', 1, {

                opacity: 0,
                ease: Expo.easeInOut
            }, {

                opacity: 1,
                ease: Expo.easeInOut,
            })
        })
    </script>




    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineMax.min.js"></script>





</body>

</html>